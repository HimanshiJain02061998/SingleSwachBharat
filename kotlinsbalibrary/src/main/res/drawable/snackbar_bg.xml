<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--    Set Margin Here -->
    <item
        android:bottom="10dp"
        android:left="180dp"
        android:right="5dp"
        android:top="10dp">

        <!-- Insert your shape here: -->
        <shape android:shape="rectangle">
            <solid android:color="@color/colorONDutyGreen" />

            <!-- Padding for inner text-->
            <padding
                android:bottom="5dp"
                android:left="190dp"
                android:right="0dp"
                android:top="5dp" />
            <corners android:radius="5dp" />

        </shape>
    </item>
</layer-list>