    <!--        <item name="android:paddingBottom">@dimen/dim_10_dp</item>-->
    <!--        <item name="android:maxLines">1</item>-->
    <!--    </style>-->


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextLabel2" parent="AppTheme">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@android:color/white</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlActivated">@android:color/white</item>
    </style>

    <style name="MyButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_primary_button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="dialog_animation_fade">
        <item name="android:windowEnterAnimation">@anim/down_to_up</item>
        <item name="android:windowExitAnimation">@anim/up_to_down</item>
    </style>

    <style name="CustomEditTextStyleLight" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/dim_14_sp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_orange</item>
        <!--<item name="android:background">@drawable/rounded_corners_text_view</item>-->
        <item name="android:layout_marginTop">@dimen/dim_10_dp</item>
        <item name="android:backgroundTint">@color/colorDefault</item>
        <item name="android:paddingBottom">@dimen/dim_10_dp</item>
        <item name="android:maxLines">1</item>
    </style>


    <style name="MyEditTextStyleLight" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/dim_14_sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textCursorDrawable">@drawable/cursor_orange</item>
        <!--<item name="android:background">@drawable/rounded_corners_text_view</item>-->
        <item name="android:layout_marginTop">@dimen/dim_10_dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:paddingBottom">@dimen/dim_10_dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="MySnackBar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">@null</item>
        <item name="android:layout_marginLeft">@dimen/dim_8_dp</item>
        <item name="android:layout_marginRight">@dimen/dim_8_dp</item>
        <item name="android:layout_marginBottom">@dimen/dim_24_dp</item>
    </style>

    <style name="MyEditTextStylelight.Dark" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/dim_14_sp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_orange</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:paddingBottom">@dimen/dim_10_dp</item>
    </style>


    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/_9ssp</item>
    </style>

    <style name="MacroHorizontalProgressBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:max">100</item>
    </style>

</resources>