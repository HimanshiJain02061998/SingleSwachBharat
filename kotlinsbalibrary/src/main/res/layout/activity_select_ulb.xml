<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white"
    tools:context=".common.ui.select_ulb_module.SelectUlb">

    <!-- Location Icon -->
    <ImageView
        android:id="@+id/imgLocation"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/icn_location"
        android:contentDescription="@string/app_name" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your ULB"
        android:textColor="#212121"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select your ULB to help us for\ngive you a better experience"
        android:textColor="#757575"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="8dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true"
        android:layout_marginHorizontal="4dp"
        android:foreground="?attr/selectableItemBackground">

        <Spinner
            android:id="@+id/spinnerDistrict"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingHorizontal="12dp"
            android:spinnerMode="dropdown"
            android:gravity="center_vertical" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true"
        android:layout_marginHorizontal="4dp"
        android:foreground="?attr/selectableItemBackground">

        <Spinner
            android:id="@+id/spinnerUlb"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingHorizontal="12dp"
            android:spinnerMode="dropdown"
            android:gravity="center_vertical" />
    </androidx.cardview.widget.CardView>


    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:text="Go ahead"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:backgroundTint="#1E88E5"
        android:fontFamily="sans-serif-medium" />

</LinearLayout>
