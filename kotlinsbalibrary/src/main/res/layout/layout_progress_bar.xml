<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dim_20_dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/offline_work_is_being_synced"
        android:textColor="@color/black"
        android:textSize="@dimen/dim_20_sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/remaining_count_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_8_dp"
        android:gravity="center"

        android:textSize="@dimen/dim_14_sp"
        android:textStyle="bold" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="@dimen/dim_100_dp"
        android:layout_height="@dimen/dim_100_dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dim_20_dp"
        android:layout_marginBottom="@dimen/dim_10_dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="uploading.json"
        app:lottie_loop="true" />

</LinearLayout>
